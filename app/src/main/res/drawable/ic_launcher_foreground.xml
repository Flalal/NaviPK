<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- Vinyl disc - outer ring -->
    <path
        android:pathData="M54,20 A34,34 0,1,1 53.99,20z"
        android:strokeWidth="2.5"
        android:strokeColor="#58A6FF"
        android:fillColor="#00000000" />

    <!-- Vinyl disc - groove rings -->
    <path
        android:pathData="M54,25 A29,29 0,1,1 53.99,25z"
        android:strokeWidth="0.5"
        android:strokeColor="#2A3040"
        android:fillColor="#00000000" />

    <path
        android:pathData="M54,29 A25,25 0,1,1 53.99,29z"
        android:strokeWidth="0.8"
        android:strokeColor="#2A3040"
        android:fillColor="#00000000" />

    <path
        android:pathData="M54,33 A21,21 0,1,1 53.99,33z"
        android:strokeWidth="0.5"
        android:strokeColor="#2A3040"
        android:fillColor="#00000000" />

    <path
        android:pathData="M54,37 A17,17 0,1,1 53.99,37z"
        android:strokeWidth="0.8"
        android:strokeColor="#2A3040"
        android:fillColor="#00000000" />

    <!-- Vinyl disc - label area (filled circle) -->
    <path
        android:pathData="M54,40 A14,14 0,1,1 53.99,40z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="54"
                android:centerY="54"
                android:gradientRadius="14"
                android:type="radial">
                <item
                    android:color="#FF58A6FF"
                    android:offset="0.0" />
                <item
                    android:color="#FF388BFD"
                    android:offset="1.0" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- Play triangle in center -->
    <path
        android:fillColor="#FFFFFF"
        android:pathData="M49,46 L49,62 L63,54z" />

    <!-- Subtle shine on vinyl -->
    <path
        android:pathData="M54,22 A32,32 0,0,1 82,42"
        android:strokeWidth="1"
        android:strokeColor="#15FFFFFF"
        android:fillColor="#00000000" />

</vector>
